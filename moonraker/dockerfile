# Dockerfile para Moonraker-Obico
FROM python:3.9-slim

# Instala dependências necessárias
RUN apt-get update && apt-get install -y \
    git \
    libffi-dev \
    build-essential \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Define diretório de trabalho
WORKDIR /app

# Clona o repositório oficial do Moonraker-Obico
RUN git clone https://github.com/TheSpaghettiDetective/moonraker-obico.git .

# Instala dependências Python
RUN pip install --no-cache-dir -r requirements.txt

# Porta padrão usada pelo Moonraker-Obico
EXPOSE 7125

# Comando de inicialização
CMD ["python3", "-m", "moonraker_obico.app", "-c", "/app/moonraker-obico.cfg"]
